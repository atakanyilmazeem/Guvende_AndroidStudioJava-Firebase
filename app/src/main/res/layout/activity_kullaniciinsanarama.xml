<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="false"
    tools:context=".kullaniciinsanarama">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/alavender_border"
        android:focusable="false"
        app:closeIcon="@drawable/custom_edittext"
        app:iconifiedByDefault="false"
        app:queryHint="Search..."
        app:searchHintIcon="@null"
        app:searchIcon="@drawable/baseline_manage_search_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:scrollbars="vertical"
      android:contextClickable="false"
        />

    <View
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/search"

        android:clickable="true"/>


    <Button
        android:id="@+id/insancikButton"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:background="@drawable/baseline_exit_to_app_24"
        android:backgroundTint="@color/lavender"

        android:textSize="18sp"
        app:cornerRadius="20dp" />


</RelativeLayout>