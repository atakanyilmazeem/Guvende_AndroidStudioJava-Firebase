<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arka"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/kurumsal"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="83dp"
        android:layout_marginTop="449dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="242dp"
        android:padding="8dp"
        android:text="Kurumsal Giriş İçin Tıklayınız"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/kimlikgiristxt"
        android:layout_width="286dp"
        android:layout_height="51dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="487dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:hint="Kimliğinizi giriniz."
        android:padding="8dp"
        android:textColor="@color/lavender2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sifregiristxt"
        android:layout_width="288dp"
        android:layout_height="51dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="399dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="8dp"
        android:hint="Şifrenizi giriniz."
        android:padding="8dp"
        android:password="true"
        android:textColor="@color/lavender2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butongiristxt"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_marginStart="205dp"
        android:layout_marginTop="383dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="299dp"
        android:backgroundTint="@color/lavender2"

        android:text="Giriş Yap"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/butonkayitoltxt"
        android:layout_width="170dp"
        android:layout_height="49dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="383dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="299dp"
        android:backgroundTint="@color/lavender2"
        android:onClick=""
        android:text="Kayıt Ol"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>